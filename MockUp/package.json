{
  "name": "avenstudio-mockup",
  "version": "0.1.0",
  "description": "AvenStudio Desktop Prototype - Self-Build Navigator",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "electron:dev": "electron .",
    "electron:build": "electron-builder"
  },
  "author": "AvenStudio",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "latest"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.avenstudio.app",
    "productName": "AvenStudio",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "ui/**/*",
      "electron/**/*",
      "backend/**/*",
      "data/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  }
}
